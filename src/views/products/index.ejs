<% layout('layout/boilerplate') -%>

<h1>All Products</h1>
<section class="row">
    <% for(const product of products){ %>
        <div class="col-lg-3 col-md-6">
            <div class="card mb-3" style="width: 20rem;">
                <img src="<%=product.imageUrl%>" class="card-img-top" alt="<%=product.name%>">
                <div class="card-body">
                  <h5 class="card-title d-flex justify-content-between"><%=product.name%> <span class="me-2"><%=product.rating%><i class="bi bi-star-fill"></i></span></h5>
                  <p class="card-text"><%=product.desc%></p>
                  <h5 class="card-title"><%=product.price%></h5>
                  <a href="/api/v1/products/<%=product._id%>" class="btn btn-dark btn-sm">Show</a>
                </div>
            </div>
        </div>
    <% } %>
</section>

